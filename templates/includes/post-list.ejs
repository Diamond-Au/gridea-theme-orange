<div class="post-container">
  <% posts.forEach(function(post) { %>
  <article class="post">
    <div class="left">
      <a href="<%= post.link %>">
        <h2 class="post-title"><%= post.title %></h2>
      </a>
      <div class="post-abstract">
        <% if (post.abstract ) { %> <%- post.abstract %> <% } else { %>
        <p>这个人很懒没有写介绍😅</p>
        <% }%>
      </div>
      <div class="post-info">
        <time class="post-time">
          <i class="fa fa-calendar" aria-hidden="true"></i> <%= post.dateFormat
          %>
        </time>

        <span style="margin-left: 10px;">
          <i class="fa fa-book" aria-hidden="true"></i> <%=
          post.stats.text%></span
        >

        <!-- <% post.tags.forEach(function(tag) { %>
            <a href="<%= tag.link %>" class="post-tag">
              <i class="fa fa-tag" aria-hidden="true"></i> <%= tag.name %>
            </a>
          <% }); %> -->
      </div>
      <!-- 显示的文字 -->
    </div>
    <div class="right">
      <% if (themeConfig.showFeatureImage && post.feature) { %>
      <!-- 图片 -->
      <a
        href="<%= post.link %>"
        class="post-feature-image"
        style="background-image: url('<%= post.feature %>');"
      >
      </a>
      <% } %>
    </div>
  </article>
  <% }); %>
</div>
